<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samulit.halal_pay_admin_panel">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.samulit.halal_pay_admin_panel.Model.OfflineFirebase"
        android:allowBackup="true"
        android:icon="@drawable/halalpay_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/halalpay_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EPay">
        <activity android:name="com.samulit.halal_pay_admin_panel.DepositTypeActivity" />
        <activity android:name="com.samulit.halal_pay_admin_panel.DetailsActivity" />
        <activity android:name="com.samulit.halal_pay_admin_panel.BusinessLoanList" />
        <activity android:name="com.samulit.halal_pay_admin_panel.DonationList" />
        <activity android:name="com.samulit.halal_pay_admin_panel.WithdrawList" />
        <activity android:name="com.samulit.halal_pay_admin_panel.DepositList" />
        <activity android:name="com.samulit.halal_pay_admin_panel.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>