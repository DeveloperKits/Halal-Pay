<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="Choose game"
        android:textColor="@color/text_color_back"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_entry_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Coins:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_light"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/rule"/>

    <LinearLayout
        android:id="@+id/entry_fee_layout"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tv_entry_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/minus_fee"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_minus"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:clickable="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#6EAFE7"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/coin"/>

                <TextView
                    android:id="@+id/entry_fee"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1000"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/plus_fee"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus"/>

    </LinearLayout>

</LinearLayout>