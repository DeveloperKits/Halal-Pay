<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/cancel"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:layout_marginVertical="2dp"
        app:icon="@drawable/ic_baseline_cancel_24"
        app:iconTint="@color/black"
        app:rippleColor="@color/black" />

    <TextView
        android:id="@+id/play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shop"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dark_light"
        android:layout_marginTop="-25dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/cancel"/>

    <TextView
        android:id="@+id/available_balance"
        android:layout_width="230sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="15dp"
        android:text="Available Balance: 7000000"
        android:paddingVertical="5dp"
        android:textColor="@color/deep_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/play"/>

    <RelativeLayout
        android:id="@+id/coin_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@id/play">

        <TextView
            android:id="@+id/coin_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:paddingVertical="5dp"
            android:text="70000"
            android:textColor="@color/dark_light"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/coin_pic"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/coin" />

    </RelativeLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        app:columnCount="3"
        app:rowCount="2"
        app:useDefaultMargins="true"
        android:layout_below="@id/available_balance">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/one"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:layout_columnWeight="1"
            android:clickable="true"
            android:focusable="true"
            app:strokeWidth="2dp"
            app:strokeColor="@color/deep_blue"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white_light">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/coin"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="sans-serif-black"
                    android:text="10000"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/text_color_back"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="BDT 999"
                    app:backgroundTint="@color/deep_blue"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    app:cornerRadius="20dp"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

