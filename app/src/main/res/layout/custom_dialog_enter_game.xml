<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Game"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/dark_light"
        android:layout_marginTop="-25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cancel"/>

    <Button
        android:id="@+id/cancel"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:layout_marginVertical="2dp"
        app:icon="@drawable/ic_baseline_cancel_24"
        app:iconTint="@color/black"
        app:rippleColor="@color/black" />

    <TextView
        android:id="@+id/rule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rule"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/red_light2"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@id/play"/>

    <TextView
        android:id="@+id/tv_entry_fee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Entry Fees:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dark_light"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/rule"/>

    <LinearLayout
        android:id="@+id/entry_fee_layout"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_entry_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/Transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/minus_fee"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_minus"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:clickable="true"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#6EAFE7"
            android:focusable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/coin"/>

                <TextView
                    android:id="@+id/entry_fee"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="50000"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/plus_fee"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_plus"/>

    </LinearLayout>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/entry_fee_layout"
        android:id="@+id/prize_money"
        android:textSize="16sp"
        android:layout_marginStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Prize Money : 9999"
        android:textStyle="bold"
        android:textColor="@color/dark_light"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="52dp"
        android:backgroundTint="@color/black"
        android:text="Done"
        android:textColor="@color/white_light"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:id="@+id/done"
        android:layout_below="@id/prize_money"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>